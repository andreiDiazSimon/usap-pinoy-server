datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  email     String     @unique
  password  String
  favorites Favorite[]
}

model Favorite {
  id       Int     @id @default(autoincrement())
  ogText   String?   // ðŸ”¹ New column for the original text
  text     String
  from_to  String?
  userId   Int
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}
