datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @id @default(autoincrement())
  username   String      @unique
  email      String      @unique
  password   String
  favorites  Favorite[]
}

model Favorite {
  id      Int    @id @default(autoincrement())
  text    String
  userId  Int
  user    User   @relation(fields: [userId], references: [id])
}

